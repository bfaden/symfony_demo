{% extends 'base.html.twig' %}

{% block body %}
    <h1>List</h1>
    
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Cost</th>
                <th>Wheel Diameter</th>
                <th>Brake Type</th>
                <th>Frake Material</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for bicycle in bicycles %}
            <tr>
                <td><a href="{{ path('edit_bicycle', {id: bicycle.id}) }}">{{ bicycle.name }}</a></td>
                <td>{{ bicycle.cost }}</td>
                <td>{{ bicycle.wheelDiameter }}</td>
                <td>{{ bicycle.brakeType }}</td>
                <td>{{ bicycle.frameMaterial }}</td>
                <td><a href="{{ path('delete_bicycle', {id: bicycle.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('create_bicycle') }}">Create Bicycle</a>
{% endblock %}